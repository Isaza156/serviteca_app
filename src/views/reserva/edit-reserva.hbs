{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}
<div class="col-md-4 mx-auto text-dark">
    <div class="card">
        <div class="card-header text-center">
            <h3>Editar Reserva</h3>
        </div>
        <div class="card-body">
            <form action="/reserva/edit-reserva/{{reservas._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="dia" class="form-control" placeholder="Dia" value="{{reservas.dia}}"
                        autofocus />
                </div>
                <div class="form-group">
                    <input type="text" name="mes" class="form-control" placeholder="Mes" value="{{reservas.mes}}" />
                </div>
                <div class="form-group">
                    <input type="text" name="hora" class="form-control" placeholder="Hora" value="{{reservas.hora}}" />
                </div>
                <div class="form-group">
                    <input type="text" name="servicio" class="form-control" placeholder="Servicio"
                        value="{{reservas.servicio}}" />
                </div>
                <div class="form-group">
                    <input type="text" name="placa" class="form-control" placeholder="Placa"
                        value="{{reservas.placa}}" />
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" class="form-control" placeholder="TelÃ©fono"
                        value="{{reservas.telefono}}" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                    <a href="/reserva" class="btn btn-danger btn-block mt-4">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>